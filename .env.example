# Server
PORT=3001
NODE_ENV=development

# API Keys
YOUTUBE_API_KEY=your_youtube_api_key_here
# OpenWeatherMap One Call API 3.0 (1000 calls/day free tier - rate limited)
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# YouTube OAuth (optional - for playlist copying)
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here

# User
USER_NAME=Your Name

# Weather Location (your default location)
WEATHER_DEFAULT_LAT=53.2631
WEATHER_DEFAULT_LNG=-6.1083
WEATHER_DEFAULT_NAME=Killiney, Co. Dublin

# Portfolio Configuration (optional)
AMZN_SHARES=10
CASH_ASSETS_EUR=5000
XRP_QUANTITY=1000

# Smart Home - TP-Link Tapo (required for Tapo device control)
TAPO_EMAIL=your_tplink_email@example.com
TAPO_PASSWORD=your_tplink_password

# Smart Home - Govee (optional - devices auto-discover via LAN)
GOVEE_API_KEY=your_govee_api_key
